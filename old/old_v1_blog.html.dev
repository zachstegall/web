	function getMonthString ( month ) {
		var day = "";
    switch ( month ) {
      case 0:
          day = "J1";
          break;
      case 1:
          day = "F";
          break;
      case 2:
          day = "M1";
          break;
      case 3:
          day = "A1";
          break;
      case 4:
          day = "M2";
          break;
      case 5:
          day = "J2";
          break;
      case 6:
          day = "J3";
          break;
      case 7:
          day = "A2";
          break;
      case 8:
          day = "S";
          break;
      case 9:
          day = "O";
          break;
      case 10:
          day = "N";
          break;
      case 11:
          day = "D";
          break;
    }

    return day;
  }

  function getYearString ( year ) {
    return year.toString().slice(2,4);
  }

  function getDateFormattedString ( date ) {
    return getMonthString( date.getUTCMonth() ) + ' ' + date.getDate() + ', ' + getYearString( date.getFullYear() );
  }

  function getDateString ( timestamp ) {
    var date = new Date( Number(timestamp) );
    return getDateFormattedString( date );
  }
